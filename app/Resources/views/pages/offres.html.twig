{# wk-template : offre.html.twig #}
{# wk-description : Page offre du site #}
{% extends 'base.html.twig' %}

{% block body %}
    <!--=== Content Part  ===-->
    <div class="container slider-margin-top">
        <!--=== Breadcrumbs ===-->
        {{ module("navigation/breadcrumb") }}
        <!--=== End Breadcrumbs ===-->
        {{ module("header/header-offre") }}

        <div id="menu-smint" class="tab-v1 tab-domaines">
            <div id="sub-menu" class="subMenu margin-bottom-20" style="position: fixed; margin-top: 0px; top: 0px; left: 0px;">
                <div class="inner">
                    <a href="#presentation-smint" id="presentation-smint" class="subNavBtn active pull-left">Présentation de l'offre</a>
                    <a href="#expert-smint" id="expert-smint" class="subNavBtn">Experts scientifique et auteurs</a>
                    <a href="#maj-smint" id="maj-smint" class="subNavBtn">Les dernières mise a jour</a>
                    <a href="#details-smint" id="details-smint" class="subNavBtn">Avantages et détails de l'offre</a>
                    <a href="#rien-smint" id="rien-smint" class="subNavBtn"></a>
                    <a href="javascript:void(0);" class="btn menu-button dropdown-toggle extLink" data-toggle="dropdown">
                        <i class="fa fa-angle-down menu-icon"></i>
                    </a>
                    <ul class="dropdown-menu pull-right pop-up-menu list-unstyled link-list-cstm padding-bottom-0 padding-top-0">
                        <li onclick="$('.presentation-smint').ScrollTo();"><p id="d-documents" class="pop-up-style margin-top-5 margin-bottom-5">Présentation de l'offre</p></li>
                        <li onclick="$('.expert-smint').ScrollTo();"><p id="d-expert" class="pop-up-style margin-top-5 margin-bottom-5">Experts scientifique et auteurs</p></li>
                        <li onclick="$('.maj-smint').ScrollTo();"><p id="d-maj" class="pop-up-style margin-top-5 margin-bottom-5">Les dernières mise a jour</p></li>
                        <li onclick="$('.details-smint').ScrollTo();"><p id="d-details" class="pop-up-style margin-top-5 margin-bottom-5">Avantages et détails de l'offre</p></li>
                    </ul>
                </div>
            </div>
            {{ module("navigation/onglets-offre") }}
            {{ module("reassurance/reassurance-offre") }}
            <div class="tab-content tab-content-domaine">
                <!--=== onglet presentation de l'offre ===-->
                <section id="presentation" class="tab-pane fade in tab-bg active presentation-smint">

                    <p class="text-center margin-top-35 margin-bottom-40 color-red-eti margin-right-200 font-size-17 letter-spacing-75">Les <span class="font-family-myriadpro-semibold text-uppercase">${count} articles</span> de cette offre sont organisés en <span class="font-family-myriadpro-semibold text-uppercase">${rubriqueCount} rubriques</span> &nbsp;&gt;&nbsp; Voir les derniers <a onclick="simulationOnglets('#maj');" href="#maj"><span class="color-red-eti font-family-myriadpro-semibold text-uppercase">ARTICLES PARUS</span></a></p>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                            {{ module("offre/rubriques-listing") }}
                        </div>
                        <div class="hidden-xs hidden-sm col-sm-12 col-md-4 col-lg-4 md-margin-top-30">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-12">
                                    {{ module("offre/mot-editrice") }}
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-12">
                                    {{ module("offre/temoignages") }}
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-12 ">
                                    {{ module("offre/offre-dans") }}
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!--=== onglet experts ===-->
                <section id="expert" class="tab-pane fade tab-bg expert-smint">
                    <div class="mint margin-top-20 margin-bottom-20">
                        <div class="menu">
                            <p class="menuBtn">Experts scientifique et auteurs</p>
                            <a href="javascript:void(0);" class="btn menu-button dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-angle-down menu-icon"></i>
                            </a>
                            <ul class="dropdown-menu pull-right pop-up-menu list-unstyled link-list-cstm padding-bottom-0 padding-top-0">
                                <li onclick="$('.presentation-smint').ScrollTo();"><p id="d-documents" class="pop-up-style margin-top-5 margin-bottom-5">Présentation de l'offre</p></li>
                                <li onclick="$('.expert-smint').ScrollTo();"><p id="d-expert" class="pop-up-style margin-top-5 margin-bottom-5">Experts scientifique et auteurs</p></li>
                                <li onclick="$('.maj-smint').ScrollTo();"><p id="d-maj" class="pop-up-style margin-top-5 margin-bottom-5">Les dernières mise a jour</p></li>
                                <li onclick="$('.details-smint').ScrollTo();"><p id="d-details" class="pop-up-style margin-top-5 margin-bottom-5">Avantages et détails de l'offre</p></li>
                            </ul>
                        </div>
                    </div>

                    <p class="text-center margin-top-35 margin-bottom-40 color-red-eti margin-right-200 font-size-17 letter-spacing-75">Les <span class="font-family-myriadpro-semibold text-uppercase">articles</span> ont été rédigés par le <span class="font-family-myriadpro-semibold text-uppercase"> comité d'experts scientifiques</span> suivants :</p>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8" >
                            <div class="row">
                                {{ module("experts/pleine-colonne") }}
                            </div>
                            <hr>

                            <div class="row">
                                {{ module("experts/pleine-colonne") }}
                            </div>
                            <hr>

                            <div class="row">
                                {{ module("experts/pleine-colonne") }}
                            </div>
                            <hr>

                            <div class="row">
                                {{ module("experts/pleine-colonne") }}
                            </div>
                            <hr>

                            <p class="color-red-eti font-size-17 letter-spacing-75 margin-bottom-30 margin-top-30">+ Les <span class="font-family-myriadpro-semibold text-uppercase">témoignages</span> des utilisateurs</p>
                            <div class="row" >
                                {{ module("experts/pleine-colonne-detail") }}
                            </div>
                            <hr class="hidden-md hidden-lg">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-12">
                                    {{ module("offre/mot-editrice") }}
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-12">
                                    {{ module("offre/temoignages") }}
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-12 ">
                                    {{ module("offre/offre-dans") }}
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!--=== onglet mise a jour ===-->
                <section id="maj" class="clearfix tab-pane fade tab-bg maj-smint">
                    <div class="mint margin-top-20 margin-bottom-20">
                        <div class="menu">
                            <p class="menuBtn">Les dernières mise a jour</p>
                            <a href="javascript:void(0);" class="btn menu-button dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-angle-down menu-icon"></i>
                            </a>
                            <ul class="dropdown-menu pull-right pop-up-menu list-unstyled link-list-cstm padding-bottom-0 padding-top-0">
                                <li onclick="$('.presentation-smint').ScrollTo();"><p id="d-documents" class="pop-up-style margin-top-5 margin-bottom-5">Présentation de l'offre</p></li>
                                <li onclick="$('.expert-smint').ScrollTo();"><p id="d-expert" class="pop-up-style margin-top-5 margin-bottom-5">Experts scientifique et auteurs</p></li>
                                <li onclick="$('.maj-smint').ScrollTo();"><p id="d-maj" class="pop-up-style margin-top-5 margin-bottom-5">Les dernières mise a jour</p></li>
                                <li onclick="$('.details-smint').ScrollTo();"><p id="d-details" class="pop-up-style margin-top-5 margin-bottom-5">Avantages et détails de l'offre</p></li>
                            </ul>
                        </div>
                    </div>

                    <p class="text-center margin-top-35 margin-bottom-40 color-red-eti margin-right-200 font-size-17 letter-spacing-75">Les <span class="font-family-myriadpro-semibold text-uppercase">216 articles</span> de cette offre sont organisés en <span class="font-family-myriadpro-semibold text-uppercase"> 10 rubriques</span></p>

                    {{ module("offre/maj") }}
                </section>

                <!--=== onglet avantages et détails ===-->
                <section id="details" class="tab-pane fade tab-bg details-smint">
                    <div class="mint margin-top-20 margin-bottom-20">
                        <div class="menu">
                            <p class="menuBtn">Avantages et détails de l'offre</p>
                            <a href="javascript:void(0);" class="btn menu-button dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-angle-down menu-icon"></i>
                            </a>
                            <ul class="dropdown-menu pull-right pop-up-menu list-unstyled link-list-cstm padding-bottom-0 padding-top-0">
                                <li onclick="$('.presentation-smint').ScrollTo();"><p id="d-documents" class="pop-up-style margin-top-5 margin-bottom-5">Présentation de l'offre</p></li>
                                <li onclick="$('.expert-smint').ScrollTo();"><p id="d-expert" class="pop-up-style margin-top-5 margin-bottom-5">Experts scientifique et auteurs</p></li>
                                <li onclick="$('.maj-smint').ScrollTo();"><p id="d-maj" class="pop-up-style margin-top-5 margin-bottom-5">Les dernières mise a jour</p></li>
                                <li onclick="$('.details-smint').ScrollTo();"><p id="d-details" class="pop-up-style margin-top-5 margin-bottom-5">Avantages et détails de l'offre</p></li>
                            </ul>
                        </div>
                    </div>
                    {{ module("offre/bandeau-abo") }}
                    <p class="text-red text-center font-size-20 margin-top-55 margin-bottom-40 letter-spacing-2">Les <strong class="downloads-title">avantages</strong> et <strong class="downloads-title">services</strong> compris dans votre offre</p>
                    <i class="fa fa-list title-icon-1 color-red-eti"></i>
                    <h3 class="best-sales color-red-eti font-weight-300 margin-bottom-15 downloads-title"><i class="fa fa-list margin-right-10 title-icon-2 color-red-eti"></i>accès</h3>
                    <div class="eti-offers-devider hr-border-red margin-left-30 margin-bottom-40 xs-margin-bottom-10"></div>
                    <div class="row row-acces-margin-bottom">
                        {{ module("offre/avantages") }}
                    </div>
                    <i class="fa fa-plus title-icon-1 color-red-eti"></i>
                    <h3 class="best-sales color-red-eti font-weight-300 margin-bottom-15 downloads-title"><i class="fa fa-plus margin-right-10 title-icon-2 color-red-eti"></i>services et outils pratiques</h3>
                    <div class="eti-offers-devider hr-border-red margin-left-30 margin-bottom-40 xs-margin-bottom-10"></div>
                    <div class="row row-services-margin-bottom">
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            {{ module("services/sqr") }}
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            {{ module("services/article-decouverte") }}
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            {{ module("services/dico-technique-multilingue") }}
                        </div>
                    </div>
                    <div class="row margin-bottom-65">
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            {{ module("services/archives") }}
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            {{ module("services/pod") }}
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            {{ module("services/infos-maj") }}
                        </div>
                    </div>
                    <p class="text-red text-center font-size-20 margin-top-55 margin-bottom-40 letter-spacing-2"><span class="font-family-myriadpro-semibold text-uppercase">détails</span> de l'offre</p>

                    {{ module("offre/detail") }}

                </section>

                <!--=== onglet rien ===-->
                <section class="rien-smint tab-pane fade tab-bg" id="rien"></section>
            </div>
        </div>

        <div class="block-bottom">
            <hr>
            <i class="fa fa-television accueil-title-icon-1"></i>
            <h3 class="text-red font-weight-300 margin-bottom-20"><i class="fa fa-television accueil-title-icon-2"></i>LES <strong>OFFRES À LA UNE</strong></h3>
            <div class="eti-accueil-devider margin-left-45 margin-bottom-40"></div>
            {{ module('boutique/offres') }}

            {{ module('reassurance/reassurance2') }}
        </div>
    </div>
{% endblock %}